pipeline {
    agent any

    parameters {
        string(name: 'VERSION', defaultValue: '1.0.0', description: 'App version')
    }

    environment {
        DOCKER_IMAGE = "myapp:${params.VERSION}"
    }

    stage('Build') {
    steps {
        echo "Building version ${params.VERSION}"
        sh 'echo "Simulating build..."'
          }
    }


        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'make test' // or your test command
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying ${DOCKER_IMAGE}"
                sh "docker build -t ${DOCKER_IMAGE} ."
                sh "docker push ${DOCKER_IMAGE}"
            }
        }

        stage('Notify') {
            steps {
                echo "Sending notification..."
                // Example: send email or Slack message
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Investigate the issue."
        }
    }
}
